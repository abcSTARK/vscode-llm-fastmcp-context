{
  "name": "vscode-llm-fastmcp-context",
  "displayName": "FastMCP Documentation MCP Server",
  "description": "Unofficial VS Code extension to connect and register a remote FastMCP Documentation MCP Server for providing documentation context to LLMs.",
  "version": "1.3.2",
  "publisher": "abcSTARK",
  "engines": {
    "vscode": ">=1.80.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:fastmcpContext.addServer",
    "onCommand:fastmcpContext.openUserMcpConfig",
  "onCommand:fastmcpContext.showWelcome",
  "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "fastmcpContext.addServer",
        "title": "Add FastMCP Context Server"
      },
      {
        "command": "fastmcpContext.showWelcome",
        "title": "Show FastMCP Welcome"
      },
      {
        "command": "fastmcpContext.openUserMcpConfig",
        "title": "Open User MCP Configuration"
      },
      {
        "command": "fastmcpContext.resetOnboarding",
        "title": "[DEV] Reset FastMCP Onboarding State"
      }
    ],
    "configuration": {
      "title": "FastMCP Context",
      "properties": {
        "fastmcpContext.openConfigOnFirstInstall": {
          "type": "boolean",
          "default": true,
          "description": "Automatically open the MCP configuration file after the server is first added."
        },
        "fastmcpContext.statusBar.show": {
          "type": "boolean",
          "default": true,
          "description": "Show a status bar item with FastMCP server state and discovered tool count."
        },
        "fastmcpContext.statusBar.alignmentRight": {
          "type": "boolean",
          "default": false,
          "description": "Align the FastMCP status bar item to the right side."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.80.0",
  "typescript": "^5.0.0"
  },
  "icon": "media/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/abcSTARK/vscode-llm-fastmcp-context"
  },
  "license": "MIT"
}
